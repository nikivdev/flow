{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "flow",
  "version": "0.1.0",
  "identifier": "com.flow.desktop",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:5176",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "",
        "titleBarStyle": "Overlay",
        "hiddenTitle": true,
        "width": 1280,
        "height": 820,
        "minWidth": 900,
        "minHeight": 600,
        "center": true,
        "resizable": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": false
  },
  "plugins": {
    "dialog": null,
    "fs": {
      "scope": [
        "$HOME/.flow/**",
        "$HOME/.config/flow/**",
        "$HOME/.lin/**"
      ]
    },
    "http": null,
    "opener": null
  }
}
